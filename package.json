{
    "name": "pushups-bot",
    "version": "1.0.0",
    "private": true,
    "description": "A Telegram bot to track pushups",
    "main": "index.js",
    "type": "module",
    "scripts": {
        "start": "vite-node apps/telegram-bot/src/index.ts",
        "dev": "vite-node --watch apps/telegram-bot/src/index.ts",
        "lint": "eslint . --ext .ts",
        "format": "prettier --write .",
        "format:check": "prettier --check .",
        "test": "vitest run",
        "test:watch": "vitest",
        "type-check": "tsc --noEmit"
    },
    "workspaces": [
        "packages/*",
        "apps/*"
    ],
    "devDependencies": {
        "@types/node": "^24.6.2",
        "@vitest/coverage-v8": "^3.2.4",
        "eslint": "^9.36.0",
        "eslint-config-prettier": "^10.1.8",
        "eslint-plugin-prettier": "^5.5.4",
        "globals": "^16.4.0",
        "prettier": "^3.6.2",
        "typescript": "^5.9.3",
        "typescript-eslint": "^8.45.0",
        "vite": "^7.1.9",
        "vite-node": "^3.2.4",
        "vite-tsconfig-paths": "^5.1.4",
        "vitest": "^3.2.4"
    },
    "dependencies": {
        "@grammyjs/commands": "^1.2.0",
        "@grammyjs/runner": "^2.0.3",
        "@prisma/client": "^6.16.3",
        "dotenv": "^16.6.1",
        "grammy": "^1.38.2",
        "prisma": "^6.16.3"
    }
}
